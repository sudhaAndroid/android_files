<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Personal Details -->
        <TextView
            android:text="Personal Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etName"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDob"
            android:hint="Date of Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etGender"
            android:hint="Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#DDD" android:layout_marginVertical="8dp"/>

        <!-- Education Details -->
        <TextView
            android:text="Education Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etDegree"
            android:hint="Degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etUniversity"
            android:hint="University"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etYear"
            android:hint="Year of Passing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#DDD" android:layout_marginVertical="8dp"/>

        <!-- Employment Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Previous Employment Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etCompany"
            android:hint="Company Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPosition"
            android:hint="Position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDuration"
            android:hint="Duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#DDD" android:layout_marginVertical="8dp"/>

        <!-- Family Details -->
        <TextView
            android:text="Family Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etFather"
            android:hint="Father's Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etMother"
            android:hint="Mother's Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etSiblings"
            android:hint="Number of Siblings"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnRegister"
            android:text="Save and Go to Dashboard"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
